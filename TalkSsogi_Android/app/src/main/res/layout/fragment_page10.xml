<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <!-- 상단 이미지뷰 및 텍스트뷰 -->
    <ImageView
        android:id="@+id/undo_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/undo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="발신자 예측"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/undo_button"
        app:layout_constraintStart_toEndOf="@+id/undo_button"
        app:layout_constraintTop_toTopOf="@+id/undo_button" />

    <ImageView
        android:id="@+id/notice"
        android:layout_width="246dp"
        android:layout_height="192dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/notice_1"
        android:translationZ="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/searchPicture"
        android:layout_width="316dp"
        android:layout_height="252dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="186dp"
        android:layout_height="39dp"
        android:layout_marginTop="293dp"
        android:iconifiedByDefault="false"
        android:queryHint="Search here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/TalkSsogi_png"
        android:layout_width="123dp"
        android:layout_height="114dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/smile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whoMessage" />

    <ImageView
        android:id="@+id/whoMessage"
        android:layout_width="263dp"
        android:layout_height="192dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/notice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_container" />

    <!-- 프래그먼트를 교체할 컨테이너 역할을 하는 FrameLayout -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView" />

    <!--분석 중 띄우기-->
    <ProgressBar
        android:id="@+id/loadingIndicator"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:indeterminateDrawable="@drawable/animation_loding"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
