<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentActivity">

    <!-- 기존 옵션들을 포함할 ConstraintLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 왼쪽 세로로 나란하게 배치된 3개의 선택지 -->
        <TextView
            android:id="@+id/option_1"
            android:layout_width="158dp"
            android:layout_height="156dp"
            android:background="@drawable/leaf_yellow"
            android:gravity="center"
            android:text="워드 클라우드 생성"
            app:layout_constraintBottom_toTopOf="@+id/option_2"
            app:layout_constraintEnd_toStartOf="@+id/option_4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/option_2"
            android:layout_width="158dp"
            android:layout_height="156dp"
            android:background="@drawable/leaf_neon"
            android:gravity="center"
            android:text="랭킹"
            app:layout_constraintBottom_toTopOf="@+id/option_3"
            app:layout_constraintEnd_toStartOf="@+id/option_5"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option_1" />

        <TextView
            android:id="@+id/option_3"
            android:layout_width="158dp"
            android:layout_height="156dp"
            android:background="@drawable/leaf_blue"
            android:gravity="center"
            android:text="발신자 예측 (RNN)"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/option_5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/option_2" />

        <!-- 오른쪽 세로로 엇갈리게 배치된 2개의 선택지 -->
        <TextView
            android:id="@+id/option_4"
            android:layout_width="158dp"
            android:layout_height="156dp"
            android:background="@drawable/leaf_green"
            android:gravity="center"
            android:text="활동 분석"
            app:layout_constraintBottom_toTopOf="@+id/option_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/option_1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/option_5"
            android:layout_width="158dp"
            android:layout_height="156dp"
            android:background="@drawable/leaf_orange"
            android:gravity="center"
            android:text="단어 사칙연산 게임 (word2vec)"
            app:layout_constraintBottom_toTopOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/option_3"
            app:layout_constraintTop_toBottomOf="@+id/option_4" />

        <!-- 하단에 화분이 + 말풍선 -->
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="118dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:srcCompat="@drawable/talk_select" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 프래그먼트를 위한 컨테이너 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>
